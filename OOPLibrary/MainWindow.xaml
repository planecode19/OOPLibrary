<Window x:Class="OOPLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOPLibrary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Name="tbTitle" Text="Book Title" Margin="0,5"/>
            <TextBox Name="tbAuthor" Text="Author" Margin="0,5"/>
            <TextBox Name="tbISBN" Text="ISBN" Margin="0,5"/>
            <TextBox Name="tbYear" Text="Publication Year" Margin="0,5"/>
            <ComboBox Name="cbBookType" Margin="0,5">
                <ComboBoxItem Content="Fiction"/>
                <ComboBoxItem Content="Non-Fiction"/>
                <ComboBoxItem Content="Comic"/>
            </ComboBox>
            <TextBox Name="tbSpecific" Text="Genre/Field/Illustrator" Margin="0,5"/>
            <Button Content="Add Book" Click="btnAddBook_Click" Margin="0,5"/>
            <Button Content="Show List" Click="btnShowList_Click" Margin="0,5"/>
            <Button Content="Save to File" Click="btnSaveToFile_Click" Margin="0,5"/>
            <ListBox Name="lbBookList" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
